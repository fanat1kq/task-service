<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-failed-messages-table" author="fanat1kq">
        <comment>Create failed_messages table for storing failed Kafka messages</comment>

        <createTable schemaName="task_service"  tableName="failed_messages" remarks="Table for storing failed Kafka messages with retry mechanism">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_failed_messages"/>
            </column>

            <column name="topic" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="message" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="retry_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)" defaultValue="RETRYING">
                <constraints nullable="false"/>
            </column>

            <column name="last_attempt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>


    </changeSet>
</databaseChangeLog>