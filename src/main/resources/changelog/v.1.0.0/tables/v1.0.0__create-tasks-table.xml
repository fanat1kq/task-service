<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-tasks-table-002" author="fanat1kq">
        <createTable schemaName="task_service" tableName="tasks" remarks="Table of tasks">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="user_id" type="bigserial">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="NEW">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex schemaName="task_service" tableName="tasks" indexName="idx_tasks_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex schemaName="task_service" tableName="tasks" indexName="idx_tasks_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>